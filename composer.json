{
    "name": "valeravilks/celestial",
    "type": "project",
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.3"
    },
    "scripts": {
        "lint": "vendor/bin/phpcs ./cel-core",
        "fix": "vendor/bin/phpcbf ./cel-core",
        "post-install-cmd": "composer install --working-dir=./cel-core",
        "post-autoload-dump": "composer dump-autoload --working-dir=./cel-core"
    }
}
